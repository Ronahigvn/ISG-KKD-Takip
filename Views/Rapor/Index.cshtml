@model List<ISGKkdTakip.Models.Rapor>

@{
    ViewData["Title"] = "Rapor Listesi";
}

<h2>Rapor Listesi</h2>

<table class="table-auto border-collapse border border-gray-300 w-full">
    <thead>
        <tr class="bg-gray-200">
            <th class="border border-gray-300 px-4 py-2">ID</th>
            <th class="border border-gray-300 px-4 py-2">Mekan</th>
            <th class="border border-gray-300 px-4 py-2">Uygunsuzluk</th>
            <th class="border border-gray-300 px-4 py-2">Tarih</th>
            <th class="border border-gray-300 px-4 py-2">Toplam Ki≈üi</th>
            <th class="border border-gray-300 px-4 py-2">Ekipman Kullanan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="border border-gray-300 px-4 py-2">@item.Id</td>
                <td class="border border-gray-300 px-4 py-2">@item.Mekan?.Ad</td>
                <td class="border border-gray-300 px-4 py-2">@item.Uygunsuzluk?.Ad</td>
                <td class="border border-gray-300 px-4 py-2">@item.Tarih.ToShortDateString()</td>
                <td class="border border-gray-300 px-4 py-2">@item.ToplamKisi</td>
                <td class="border border-gray-300 px-4 py-2">@item.EkipmanKullanan</td>
            </tr>
        }
    </tbody>
</table>
