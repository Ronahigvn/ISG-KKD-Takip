@model ISGKkdTakip.Models.Rapor

@{
    ViewData["Title"] = "Yeni Rapor Ekle";
}

<h1>Yeni Rapor Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="MekanId">Mekan</label>
        <select asp-for="MekanId" class="form-control" asp-items="@(new SelectList(ViewBag.Mekanlar, "Id", "Ad"))">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="form-group">
        <label for="UygunsuzlukId">Uygunsuzluk</label>
        <select asp-for="UygunsuzlukId" class="form-control" asp-items="@(new SelectList(ViewBag.Uygunsuzluklar, "Id", "Tip"))">
            <option value="">Seçiniz</option>
        </select>
    </div>

    <div class="form-group">
        <label for="ToplamKisi">Toplam Kişi</label>
        <input asp-for="ToplamKisi" class="form-control" />
    </div>

    <div class="form-group">
        <label for="EkipmanKullanan">Ekipman Kullanan</label>
        <input asp-for="EkipmanKullanan" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
