   @{
    ViewData["Title"] = "KKD Tespit Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Layout dosyanızın yolu
}

@section Styles {
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            background-color: #eef2f6; /* Açık gri arka plan */
            color: #333;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .dashboard-header {
            background-color: #2c3e50; /* Koyu başlık */
            color: #ffffff;
            padding: 1.5rem 2rem;
            text-align: center;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 2rem;
        }

        .dashboard-container {
            display: flex;
            flex-wrap: wrap; /* Küçük ekranlarda alt alta düşmesini sağlar */
            gap: 2rem; /* Kartlar arası boşluk */
            padding: 0 2rem 2rem 2rem;
            max-width: 1400px; /* Maksimum genişlik */
            margin: auto; /* Ortala */
            flex-grow: 1; /* İçeriğin dikeyde yayılmasını sağlar */
        }

        .dashboard-card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            padding: 2rem;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            text-align: center;
        }

        .summary-card {
            flex: 1 1 300px; /* Esnek genişlik, minimum 300px */
            min-width: 300px;
            max-width: 400px;
        }

        .chart-card {
            flex: 1 1 400px; /* Esnek genişlik, minimum 400px */
            min-width: 400px;
            max-width: 500px;
        }

        .image-card {
            flex: 2 1 600px; /* Esnek genişlik, diğerlerinden daha büyük */
            min-width: 600px;
            max-width: 800px;
        }

        /* Küçük ekranlar için responsive ayarlar */
        @media (max-width: 1200px) {
            .dashboard-container {
                flex-direction: column;
                align-items: center;
            }
            .summary-card, .chart-card, .image-card {
                max-width: 90%; /* Küçük ekranlarda tam genişlik */
                width: 100%;
            }
        }
        @media (max-width: 768px) {
            .dashboard-header {
                font-size: 1.5rem;
                padding: 1rem;
            }
            .dashboard-container {
                padding: 1rem;
                gap: 1rem;
            }
            .dashboard-card {
                padding: 1.5rem;
            }
        }

        h2 {
            color: #007bff;
            margin-bottom: 1rem;
            font-size: 1.8rem;
            font-weight: 600;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 0.5rem 0;
            border-bottom: 1px dashed #eee;
        }
        .summary-item:last-child {
            border-bottom: none;
        }
        .summary-item strong {
            color: #2c3e50;
            font-size: 1.1rem;
        }
        .summary-item span {
            font-size: 1.1rem;
            font-weight: bold;
            color: #007bff;
        }
        .summary-item.total span {
            font-size: 1.3rem;
            color: #28a745; /* Toplam için farklı renk */
        }

        .image-card img {
            border: 3px solid #007bff;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
            transition: transform 0.3s ease;
        }
        .image-card img:hover {
            transform: scale(1.01);
        }

        .btn-back {
            display: inline-block;
            margin-top: 2rem;
            padding: 0.8rem 2rem;
            background-color: #6c757d;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }
        .btn-back:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ViewBag'den gelen verileri JSON formatında doğrudan JavaScript değişkenlerine atayın
            // Bu, sayıların doğru türde (number) olmasını garanti eder.
            const hardhats = @Html.Raw(Json.Serialize((int)(ViewBag.Hardhats ?? 0)));
            const vests = @Html.Raw(Json.Serialize((int)(ViewBag.Vests ?? 0)));
            const goggles = @Html.Raw(Json.Serialize((int)(ViewBag.Goggles ?? 0)));
            const masks = @Html.Raw(Json.Serialize((int)(ViewBag.Masks ?? 0)));

            // Hata ayıklama için konsola yazdırın
            console.log('KKD Sayıları:', {
                hardhats: hardhats,
                vests: vests,
                goggles: goggles,
                masks: masks
            });

            // Eğer tüm sayılar 0 ise grafiği gizleyebilir veya özel bir mesaj gösterebilirsiniz.
            if (hardhats === 0 && vests === 0 && goggles === 0 && masks === 0) {
                console.warn('Tüm KKD sayıları sıfır. Grafik boş görünebilir.');
                // İsteğe bağlı: Grafik container'ını gizle
                // document.querySelector('.chart-container').style.display = 'none';
                // document.querySelector('.chart-container').innerHTML = '<p class="text-muted text-center">Grafik verisi bulunamadı.</p>';
            }


            const ctx = document.getElementById('kkdDonutChart').getContext('2d');

            const kkdDonutChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Kask', 'Yelek', 'Gözlük', 'Maske'],
                    datasets: [{
                        label: 'KKD Dağılımı',
                        data: [
                            hardhats, // Değişkenleri doğrudan kullanın
                            vests,
                            goggles,
                            masks
                        ],
                        backgroundColor: [
                            '#FF6384', // Kask (Kırmızımsı)
                            '#36A2EB', // Yelek (Mavimsi)
                            '#FFCE56', // Gözlük (Sarımsı)
                            '#4BC0C0'  // Maske (Turkuaz)
                        ],
                        borderColor: '#fff',
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false, // Yüksekliği kontrol etmek için
                    cutout: '60%',
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                font: {
                                    size: 14
                                }
                            }
                        },
                        title: {
                            display: true,
                            text: 'Kişisel Koruyucu Donanım Dağılımı',
                            font: {
                                size: 18,
                                weight: 'bold'
                            },
                            padding: {
                                top: 10,
                                bottom: 20
                            }
                        }
                    }
                }
            });
        });
    </script>
}

<div class="dashboard-header">
    KKD Tespit Dashboard
</div>

<div class="dashboard-container">
    <div class="dashboard-card summary-card">
        <h2>📊 Tespit Özeti</h2>
        <div style="width: 100%;">
            <div class="summary-item total">
                <strong>Toplam Tespit Edilen Kişi Sayısı:</strong>
                <span>@(ViewBag.TotalPeople ?? "Veri Yok")</span>
